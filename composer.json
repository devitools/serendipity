{
    "name": "devitools/serendipity",
    "type": "library",
    "version": "1.0.3",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "The Hyperf missing component",
    "autoload": {
        "psr-4": {
            "Serendipity\\": "src/"
        },
        "files": [
            "config/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Serendipity\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "google/cloud-logging": "^1.32",
        "hyperf/command": "^3.1",
        "hyperf/context": "^3.1",
        "hyperf/contract": "^3.1",
        "hyperf/coordinator": "^3.1",
        "hyperf/db": "^3.1",
        "hyperf/di": "3.1.*",
        "hyperf/event": "^3.1",
        "hyperf/exception-handler": "^3.1",
        "hyperf/framework": "3.1.*",
        "hyperf/http-message": "^3.1",
        "hyperf/http-server": "^3.1",
        "hyperf/support": "^3.1",
        "hyperf/validation": "^3.1",
        "psr/container": "^2.0",
        "psr/http-message": "^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/log": "^3.0",
        "rakibtg/sleekdb": "^2.15",
        "swow/psr7-plus": "^1.1",
        "visus/cuid2": "^4.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/devtool": "~3.1.0",
        "hyperf/testing": "~3.1.0",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^2",
        "phpunit/phpunit": "^10.5",
        "qossmic/deptrac-shim": "^1.0",
        "rector/rector": "^2",
        "roave/security-advisories": "dev-latest",
        "robiningelbrecht/phpunit-pretty-print": "^1.3",
        "squizlabs/php_codesniffer": "^3.11",
        "swoole/ide-helper": "^5.0",
        "vimeo/psalm": "^5.26"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test:unit": "@composer test -- --testsuite=Unit",
        "test:integration": "@composer test -- --testsuite=Integration",
        "test": "bin/phpunit.php",
        "lint:phpcs": "phpcs --standard=PSR12,phpcs.xml -s src",
        "lint:phpstan": "phpstan analyse --memory-limit 512M",
        "lint:deptrac": "deptrac analyse --report-uncovered --fail-on-uncovered",
        "lint:phpmd": "phpmd src ansi phpmd.xml",
        "lint:rector": "rector --dry-run",
        "lint:psalm": "psalm",
        "lint": [
            "composer lint:phpcs",
            "composer lint:phpstan",
            "composer lint:deptrac",
            "composer lint:phpmd",
            "composer lint:rector",
            "composer lint:psalm"
        ],
        "ci": [
            "composer lint",
            "composer test"
        ],
        "fix": [
            "php-cs-fixer fix src",
            "php-cs-fixer fix bin",
            "php-cs-fixer fix config",
            "php-cs-fixer fix tests"
        ]
    },
    "extra": {
        "hyperf": {
            "config": "Serendipity\\ConfigProvider"
        }
    }
}
